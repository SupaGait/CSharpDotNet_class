<Page
    x:Class="Course8_ColorPicker.ColorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Course8_ColorPicker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="gridFrame" Background="#FFFFFFFF" PointerMoved="Grid_PointerMoved" PointerPressed="Grid_PointerPressed">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="87,53,0,0" TextWrapping="Wrap" Text="Select a color" VerticalAlignment="Top" Height="47" Width="228" FontSize="30"/>
        <TextBox x:Name="posX_textBox" HorizontalAlignment="Left" Margin="87,144,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="228"/>
        <TextBox x:Name="posY_textBox" HorizontalAlignment="Left" Margin="87,181,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="228"/>
        <Button x:Name="select_button" Content="Select" HorizontalAlignment="Left" Margin="196,531,0,0" VerticalAlignment="Top" Height="39" Width="119" FontSize="20" Click="select_button_Click"/>

    </Grid>
</Page>
